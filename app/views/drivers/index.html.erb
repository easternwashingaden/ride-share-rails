<h3>All Drivers</h3>

<p><%= page_entries_info @passengers %></p>

<div class="pagination">
  <%= will_paginate @passengers %>
</div>

<% if @drivers.length > 0 %>
  <table style="width:70%">
  <tr>
      <th>ID</th>
      <th>Name</th>
      <th>VIN</th>
      <th>Status</th>
    </tr>
  <% @drivers.each do |driver| %>

    <tr>
      <td><%= driver.id %></td>
      <td><%= link_to driver.name, driver_path(driver.id)%></td>
      <td><%= driver.vin.upcase %></td>
      <td><%= driver.available ? "Available" : "Unavailable" %></td>
    </tr>
  
  <% end %>
  </table>
<% else %>
    <p>No drivers in the system!</p>
<% end %>

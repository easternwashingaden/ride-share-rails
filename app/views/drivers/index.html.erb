<h3>DRIVERS</h3>

<% if @drivers.length > 0 %>
  <table style="width:70%">
  <tr>
      <th>ID</th>
      <th>Name</th>
      <th>VIN</th>
      <th>Status</th>
    </tr>
  <% @drivers.each do |driver| %>
  
    <tr>
      <td><%= driver.id %></td>
      <td><%= link_to driver.name, driver_path(driver.id)%></td>
      <td><%= driver.vin.upcase %></td>
      <td><%= driver.available ? "Available" : "Unavailable" %></td>
      <td><%= driver.available ? link_to("--Make Unavailable |", driver_available_path(driver), method: :patch) : link_to("--Make Availble |", driver_available_path(driver), method: :patch)%></td> 
      <td><%= link_to "--EDIT |", edit_driver_path(driver.id) %></td>
      <td><%= link_to "--DELETE", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver #{driver.name}?"} %></td>
    </tr>
  
  <% end %>
  </table>
<% else %>
    <p>No drivers in the system!</p>
<% end %>

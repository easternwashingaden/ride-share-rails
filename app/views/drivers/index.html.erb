<h3>DRIVERS</h3>

<% if @drivers.length > 0 %>
  <ol>
  <% @drivers.each do |driver| %>
    <li>
      <%= link_to driver.name, driver_path(driver.id)%>
      <%= link_to "-----EDIT |", edit_driver_path(driver.id) %>
      <%= link_to "DELETE", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver #{driver.name}?"}%>
    </li>

  <% end %>
  </ol>
<% else %>
    <p>No drivers in the system!</p>
<% end %>

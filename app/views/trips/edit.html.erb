
<%= form_with model: @trip, class: 'trip-form' do |f| %>

  <%= f.label :date%>
  <%= f.text_field :date %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :rating %>
  <%= f.label :rating %>
    <%= f.select :rating, [1,2,3,4,5] %>

  <%= f.submit "Edit Trip", class: "driver-form-button" %>
<% end %>

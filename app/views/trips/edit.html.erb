<h3>Edit Trip #<%= @trip.id %></h3>

<p>Please make any necessary changes to this trip in our database:</p>
<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip, class: "trip-form" do |f| %>

  <%= f.label :date %>
  <%= f.date_select(:date) %>

  <div class="line-break"></div>

  <%= f.label :cost %>
  <%= f.text_field :cost, placeholder: "cost" %>

  <div class="line-break"></div>

  <%= f.label :rating %>
  <%= f.select(:rating, [1, 2, 3, 4, 5]) %>

  <div class="line-break"></div>

  <%= f.submit "Update Trip", class: "trip-form-button" %>
<% end %>
